{
    "name": "your-vendor/php-template-cli",
    "description": "A CLI tool for processing template files.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/console": "^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0"
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}